{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "valueType": {
      "type": "enumeration",
      "enum": [
        "грн",
        "грн/кг"
      ],
      "default": "грн"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "saleType": {
      "type": "enumeration",
      "enum": [
        "Тільки оптом",
        "Оптом і в роздріб"
      ],
      "default": "Оптом і в роздріб"
    },
    "availability": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "text"
    },
    "application": {
      "type": "richtext"
    },
    "productNature": {
      "type": "richtext"
    },
    "specification": {
      "displayName": "Specification",
      "type": "component",
      "repeatable": true,
      "component": "specification.specification"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Клей ПВА в розфасовці",
        "Клей ПВА дисперсія в промисловій тарі",
        "Будівельні оздоблювальні матеріали",
        "Контрактне виробництво",
        "Трубопровідна та запірна арматура"
      ],
      "required": true
    }
  }
}
